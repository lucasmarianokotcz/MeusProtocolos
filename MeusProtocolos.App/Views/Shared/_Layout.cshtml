<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meus Protocolos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/Meus protocolos.png" width="170" /></a> &nbsp;&nbsp;
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Cadastro", "Cadastro", new { controller = "Home" }, new { @class = "nav-link nav-button-conta" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Login", "Login", new { controller = "Home" }, new { @class = "nav-link nav-button-conta" })
                            </li>
                        }
                        else
                        {
                            <li class="nav-item text-center h6" style="padding: 30px 0 20px 0">
                                Olá, @User.Identity.Name. @Html.ActionLink("Sair", "Login", "Home", null, new { @style = "padding-left: 20px" })
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @Html.ActionLink("Protocolos", "Index", new { controller = "Protocolos" }, new { @class = "nav-link nav-button" })
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Meus Protocolos
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>